<% layout("/layouts/boilerplate") %>

<style>
  .forgot-wrapper {
    min-height: 80vh;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .forgot-card {
    width: 500px;
    max-width: 90%;
    border-radius: 15px;
    padding: 2rem;
    background-color: #fff;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
  }

  .forgot-card h2 {
    font-weight: 600;
    margin-bottom: 1.5rem;
    text-align: center;
  }

  .form-control:focus {
    border-color: #fe424d;
    box-shadow: none;
  }

  .btn-gradient {
    background: linear-gradient(to right, #fe424d, #fe5a70);
    border: none;
    color: white;
    font-weight: 600;
  }

  .btn-gradient:hover {
    opacity: 0.9;
  }

  .text-link {
    color:#fe424d;
    font-weight: 500;
    text-decoration: none;
  }

  .text-link:hover {
    text-decoration: underline;
  }
</style>

<div class="forgot-wrapper">
  <div class="forgot-card">
    <h2>Forgot Password</h2>
    <form action="/forgotpassword" method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="emailOrUsername" class="form-label">Enter your Email or Username:</label>
        <input
          type="text"
          id="emailOrUsername"
          name="emailOrUsername"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Enter a valid email or username.</div>
      </div>

      <button type="submit" class="btn btn-gradient w-100 mb-3">Send OTP</button>
    </form>

    <div class="text-center">
      <a href="/login" class="text-link">Back to Login</a>
    </div>
  </div>
</div>