<% layout("/layouts/boilerplate") %>

<style>
  .otp-wrapper {
    min-height: 80vh;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .otp-card {
    width: 500px;
    max-width: 90%;
    border-radius: 15px;
    padding: 2rem;
    background-color: #fff;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
  }

  .otp-card h2 {
    font-weight: 600;
    margin-bottom: 1.5rem;
    text-align: center;
  }

  .form-control:focus {
    border-color: #fe424d;
    box-shadow: none;
  }

  .btn-gradient {
    background: linear-gradient(to right, #fe424d, #fe5a70);
    border: none;
    color: white;
    font-weight: 600;
  }

  .btn-gradient:hover {
    opacity: 0.9;
  }

  .text-link {
    color: #fe424d;
    font-weight: 500;
    text-decoration: none;
  }

  .text-link:hover {
    text-decoration: underline;
  }
</style>

<div class="otp-wrapper">
  <div class="otp-card">
    <h2>Reset Password</h2>

    <form action="/resetpassword" method="POST" class="needs-validation" novalidate>
      <input
        type="hidden"
        name="emailOrUsername"
        value="<%= emailOrUsername %>" />
      <input
        type="hidden"
        name="userId"
        value="<%= userId %>" /> <!-- Add this hidden field -->
   
      <div class="mb-3">
        <label for="password" class="form-label">New Password:</label>
        <input
          type="password"
          id="password"
          name="password"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Enter a valid password!</div>
      </div>
   
      <div class="mb-3">
        <label for="confirmPassword" class="form-label">Confirm New Password:</label>
        <input
          type="password"
          id="confirmPassword"
          name="confirmPassword"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Confirm your new password!</div>
      </div>
   
      <button type="submit" class="btn btn-gradient w-100 mb-3">Reset Password</button>
    </form>
   
    <div class="text-center">
      <a href="/forgotpassword" class="text-link d-block">Back to Forgot Password</a>
    </div>
  </div>
</div>
