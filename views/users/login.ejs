<% layout("layouts/boilerplate") %>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap');

  body {
    margin: 0;
    padding: 0;
    background: linear-gradient(-45deg, #0f172a, #1e293b, #111827, #1b1b1b);
    background-size: 400% 400%;
    animation: gradientBG 15s ease infinite;
    color: white;
    overflow-x: hidden;
  }

  @keyframes gradientFlow {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  .glass-card {
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(18px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 20px;
    padding: 45px;
    box-shadow: 0 0 25px rgba(255, 255, 255, 0.05);
    transition: transform 0.3s ease;
  }

  .glass-card:hover {
    transform: translateY(-5px);
  }

  .login-left {
    animation: fadeInLeft 1s ease-in-out;
  }

  .login-right {
    animation: fadeInRight 1.1s ease-in-out;
  }

  .feature-icon {
    font-size: 1.8rem;
    margin-right: 15px;
    animation: float 3s ease-in-out infinite;
    color: #facc15;
  }

  .form-control {
    background-color: rgba(255, 255, 255, 0.05);
    border: none;
    border-bottom: 1px solid #facc15;
    color: white;
    border-radius: 0;
    padding: 12px;
    transition: all 0.3s;
  }

  .form-control:focus {
    background-color: rgba(255, 255, 255, 0.1);
    box-shadow: none;
    border-bottom: 1px solid #fde68a;
  }

  .login-btn {
    background: linear-gradient(to right, #facc15, #fcd34d);
    color: black;
    font-weight: 600;
    padding: 12px;
    border: none;
    border-radius: 8px;
    transition: all 0.3s ease-in-out;
    animation: popUp 0.8s ease;
  }

  .login-btn:hover {
    background: linear-gradient(to right, #fde68a, #facc15);
    transform: scale(1.05);
  }

  .yellow-highlight {
    background: linear-gradient(to right, #facc15, #fcd34d);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    font-weight: 700;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-6px); }
  }

  @keyframes fadeInLeft {
    0% { opacity: 0; transform: translateX(-40px); }
    100% { opacity: 1; transform: translateX(0); }
  }

  @keyframes fadeInRight {
    0% { opacity: 0; transform: translateX(40px); }
    100% { opacity: 1; transform: translateX(0); }
  }

  @keyframes popUp {
    from { opacity: 0; transform: scale(0.9); }
    to { opacity: 1; transform: scale(1); }
  }

  @media (max-width: 768px) {
    .glass-card {
      padding: 30px 20px;
    }

    .feature-icon {
      font-size: 1.4rem;
    }
  }
</style>

<div class="container-fluid min-vh-100 d-flex align-items-center justify-content-center py-5">
  <div class="row w-100 mx-3 glass-card" style="max-width: 1100px;">
    
    <!-- Left Side -->
    <div class="col-md-6 p-4 d-flex flex-column justify-content-center login-left">
      <h2 class="mb-4 fw-bold">Welcome Back to <span class="yellow-highlight">Wanderlust</span></h2>
      <p class="mb-4 text-white-50">Your gateway to the world. Sign in and get ready to explore luxurious stays and unforgettable adventures.</p>
      <ul class="list-unstyled">
        <li class="d-flex align-items-start mb-3">
          <div class="feature-icon">‚ú®</div>
          <div>Curated stays tailored for you</div>
        </li>
        <li class="d-flex align-items-start mb-3">
          <div class="feature-icon">üó∫Ô∏è</div>
          <div>Global destinations, local experiences</div>
        </li>
        <li class="d-flex align-items-start mb-3">
          <div class="feature-icon">üíº</div>
          <div>Business + leisure = Bleisure</div>
        </li>
      </ul>
    </div>

    <!-- Right Side -->
<div class="col-md-6 p-4 login-right">
  <h3 class="mb-4 fw-semibold">Login to Continue</h3>
  <form action="/login" method="POST" class="needs-validation" novalidate>
    <div class="mb-3">
      <label for="email" class="form-label">Email</label>
      <input type="email" class="form-control" id="email" name="email" required>
      <div class="invalid-feedback">Please enter your email.</div>
    </div>

    <div class="mb-4">
      <label for="password" class="form-label">Password</label>
      <input type="password" class="form-control" id="password" name="password" required>
      <div class="invalid-feedback">Please enter your password.</div>
    </div>

    <button type="submit" class="btn login-btn w-100">Login</button>
  </form>

  <p class="text-muted mt-4">
    New here? 
    <a href="/signup" class="yellow-highlight text-decoration-none">Create an account</a>
  </p>
</div>


<script>
  (function () {
    'use strict';
    const forms = document.querySelectorAll('.needs-validation');
    Array.from(forms).forEach(form => {
      form.addEventListener('submit', function (event) {
        if (!form.checkValidity()) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });
  })();
</script>
