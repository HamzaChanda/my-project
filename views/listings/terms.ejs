<% layout("layouts/boilerplate") %>

<style>
   .terms-hero {
    background-color: #e9f2ff; /* New subtle blue background */
    color: #003366;
    padding: 80px 20px;
    text-align: center;
  }

  .terms-hero h1 {
    font-size: 3.5rem;
    font-weight: 800;
    margin-bottom: 15px;
  }

  .terms-hero p {
    font-size: 1.2rem;
    opacity: 0.9;
  }

  .terms-main {
    padding: 60px 20px;
    background-color: #f9fbfd;
  }

  .terms-card {
    max-width: 1000px;
    margin: auto;
    background: white;
    border-left: 6px solid #007bff;
    padding: 40px;
    border-radius: 18px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
  }

  .terms-section {
    margin-bottom: 40px;
  }

  .terms-section h3 {
    display: flex;
    align-items: center;
    font-size: 1.5rem;
    color: #007bff;
    font-weight: 600;
    margin-bottom: 10px;
  }

  .terms-section h3 i {
    margin-right: 10px;
    font-size: 1.3rem;
  }

  .terms-section p {
    font-size: 1.05rem;
    color: #444;
    line-height: 1.7;
  }

  @media (max-width: 768px) {
    .terms-hero h1 {
      font-size: 2.3rem;
    }

    .terms-card {
      padding: 25px;
    }
  }
</style>

<section class="terms-hero">
  <h1>Terms & Conditions</h1>
  <p>Know your rights, responsibilities, and how we keep things awesome on Wanderlust.</p>
</section>

