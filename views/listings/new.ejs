<% layout("layouts/boilerplate") %>

<!-- Airbnb Fonts -->
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />

<style>
  body {
    background: linear-gradient(135deg, #f6f6f6 0%, #e8e8e8 100%);
    font-family: 'Inter', sans-serif;
  }

  .form-wrapper {
    max-width: 850px;
    margin: auto;
    margin-top: 60px;
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(12px);
    border-radius: 24px;
    padding: 3rem;
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
    animation: slideUp 0.8s ease;
    margin-bottom: 60px;
  }

  @keyframes slideUp {
    0% {
      transform: translateY(40px);
      opacity: 0;
    }
    100% {
      transform: translateY(0px);
      opacity: 1;
    }
  }

  h2.form-title {
    font-weight: 600;
    font-size: 2rem;
    color: #333;
    text-align: center;
    margin-bottom: 2.5rem;
  }

  label.form-label {
    font-weight: 500;
    margin-bottom: 0.4rem;
    color: #444;
  }

  .form-control {
    border-radius: 12px;
    padding: 12px 16px;
    border: 1px solid #ccc;
    transition: all 0.3s ease-in-out;
  }

  .form-control:focus {
    border-color: #ff385c;
    box-shadow: 0 0 0 0.15rem rgba(255, 56, 92, 0.25);
  }

  .btn-airbnb {
    background: #ff385c;
    color: white;
    padding: 0.75rem 2rem;
    font-weight: 600;
    font-size: 1rem;
    border-radius: 12px;
    border: none;
    width: 100%;
    transition: all 0.3s ease;
  }

  .btn-airbnb:hover {
    background: #e0274b;
  }

  .glass-section {
    background: rgba(255, 255, 255, 0.65);
    border-radius: 16px;
    padding: 1.5rem;
    margin-bottom: 1.5rem;
    box-shadow: inset 0 0 10px rgba(255, 255, 255, 0.2);
  }

  @media (max-width: 768px) {
    .form-wrapper {
      padding: 2rem;
      border-radius: 16px;
    }

    .glass-section {
      padding: 1rem;
    }
  }
</style>

<div class="container">
  <div class="form-wrapper">
    <h2 class="form-title">Create a New Listing</h2>

    <form method="post" action="/listings" enctype="multipart/form-data" class="needs-validation" novalidate>

      <div class="glass-section">
        <div class="mb-3">
          <label for="title" class="form-label">Listing Title</label>
          <input type="text" name="listing[title]" class="form-control" id="title" placeholder="Luxury stay in Goa" required>
          <div class="invalid-feedback">Title is required</div>
        </div>

        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea name="listing[discription]" class="form-control" id="description" rows="4" placeholder="Describe your beautiful home..." required></textarea>
          <div class="invalid-feedback">Description is required</div>
        </div>

        <div class="mb-3">
          <label for="image" class="form-label">Upload Image</label>
          <input type="file" name="listing[image]"  class="form-control" id="image" required>
          <div class="form-text">Preferred resolution: 1280x720</div>
        </div>
      </div>

      <div class="glass-section">
        <div class="row g-3">
          <div class="col-md-4">
            <label for="price" class="form-label">Price (per night)</label>
            <input type="number" name="listing[price]" class="form-control" id="price" placeholder="â‚¹5000" required>
            <div class="invalid-feedback">Price required</div>
          </div>
          <div class="col-md-4">
            <label for="country" class="form-label">Country</label>
            <input type="text" name="listing[country]" class="form-control" id="country" placeholder="India" required>
            <div class="invalid-feedback">Country required</div>
          </div>
          <div class="col-md-4">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="listing[location]" class="form-control" id="location" placeholder="Jaipur, Rajasthan" required>
            <div class="invalid-feedback">Location required</div>
          </div>
        </div>
      </div>

      <div class="mt-4">
        <button type="submit" class="btn btn-airbnb">Publish Listing</button>
      </div>
    </form>
  </div>
</div>
